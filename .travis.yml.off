language: node_js
sudo: false

os:
  - linux

dist:
  - xenial

node_js:
  - "12.4.0"

services:
  - xvfb

before_install:
  - if [ $TRAVIS_OS_NAME == "linux" ]; then
      export DISPLAY=':99.0'
      service xvfb start;
      sleep 3;
    fi

install:
  - npm install
  - npm run symlink

script:
  - npm run compile
  - npm run lint
  - npm run test